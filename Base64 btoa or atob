/* 
Ð¤ÑƒÐ½ÐºÑ†Ð¸Ñ ÐºÐ¾Ð´Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ñ Base64 btoa Ð¸ Ð´ÐµÐºÐ¾Ð´Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ñ Ð¿Ñ€Ð¸ Ð¿Ð¾Ð¼Ð¾Ñ‰Ð¸ atob Ð½Ð° Ð¼Ð¾Ð¹ Ð²Ð·Ð³Ð»ÑÐ´ Ð½Ðµ Ð´Ð¾Ð´ÐµÐ»Ð°Ð½Ñ‹ Ñ‚Ð°Ðº ÐºÐ°Ðº Ð½Ðµ Ð¿Ð¾Ð½Ð¸Ð¼Ð°ÑŽÑ‚ ÑŽÐ½Ð¸ÐºÐ¾Ð´Ñ‹ Ð¸ ÑÐ¼Ð¾Ð´Ð·Ð¸.
Ð”Ð»Ñ Ñ€ÐµÑˆÐµÐ½Ð¸Ñ Ð´Ð°Ð½Ð½Ð¾Ð¹ Ð¿Ñ€Ð¾Ð±Ð»ÐµÐ¼Ñ‹ ÐµÑÑ‚ÑŒ Ñ€ÑÐ´ Ð¿Ñ€Ð¾ÑÑ‚Ñ‹Ñ… Ñ€ÐµÑˆÐµÐ½Ð¸Ð¹, Ð½Ð°Ð¿Ñ€Ð¸Ð¼ÐµÑ€ Ñ‚Ð°ÐºÐ¾Ð¹ btoa(encodeURI('ðŸ­'));//"JUYwJTlGJTkwJUFE". 
ÐÐ¾ ÑÑ‚Ð° Ð½ÐµÐ±ÑƒÐ´ÐµÑ‚ ÑÑ‚Ð°Ð½Ð´Ð°Ñ€Ñ‚Ð½Ñ‹Ð¹ Base64 Ð° ÑÐ¾Ð±ÑÑ‚Ð²ÐµÐ½Ð½Ð¾ Ñ‡Ñ‘Ñ‚ Ð·Ð½Ð°ÐµÑ‚ Ñ‡Ñ‚Ð¾ Ð¿Ð¾Ñ…Ð¾Ð¶Ðµ Ð½Ð° Ð·Ð°ÑˆÑ‚Ð¾Ð¿Ñ‹Ð²Ð°Ð²ÑˆÐ¸Ðµ Ð´Ñ‹Ñ€Ñ‹! 
Ð”Ð»Ñ Ñ€ÐµÑˆÐµÐ½Ð¸Ñ ÑÑ‚Ð¾Ð¹ Ð¿Ñ€Ð¾Ð±Ð»ÐµÐ¼Ñ‹ Ñ Ð½Ð°Ð¿Ð¸ÑÐ°Ð» Ð´Ð²Ðµ Ð°Ð½Ð°Ð»Ð¾Ð³Ð¸Ñ‡Ð½Ñ‹Ñ… Ñ„ÑƒÐ½ÐºÑ†Ð¸Ð¸ ÐºÐ¾Ñ‚Ð¾Ñ€Ñ‹Ðµ Ð¿Ñ€ÐµÐºÑ€Ð°ÑÐ½Ð¾ ÑÐ¿Ñ€Ð°Ð²Ð»ÑÑŽÑ‚ÑÑ Ñ Ð´Ð°Ð½Ð½Ð¾Ð¹ Ð¿Ñ€Ð¾Ð±Ð»ÐµÐ¼Ð¾Ð¹.

btoa_('ðŸ­');//"8J+QrQ=="
atob_("8J+QrQ==");//"ðŸ­"
btoa_('ÐŸÑ€Ð¸Ð²ÐµÑ‚!');//"0J/RgNC40LLQtdGCIQ=="
atob_("0J/RgNC40LLQtdGCIQ==");//"ÐŸÑ€Ð¸Ð²ÐµÑ‚!"
ÐšÐ°Ðº Ð²Ð¸Ð´Ð½Ð° Ð¸Ð· Ñ‚ÐµÑÑ‚Ð° ÑÑ‚Ð¸ Ñ„ÑƒÐ½ÐºÑ†Ð¸Ð¸ Ð½Ð¾Ñ€Ð¼Ð°Ð»ÑŒÐ½Ð¾ ÐºÐ¾Ð´Ð¸Ñ€ÑƒÑŽÑ‚ Ð¸ Ð´ÐµÐºÐ°Ð´Ð¸Ñ€ÑƒÑŽÑ‚ Ð² ÑÑ‚Ð°Ð½Ð´Ð°Ñ€Ñ‚Ð½Ñ‹Ð¹ Base64 Ð¸ Ð’Ð°Ð¼ Ð½Ð° ÑÐµÑ€Ð²ÐµÑ€Ðµ Ð½Ðµ Ð¿Ñ€Ð¸Ð¹Ð´ÐµÑ‚ÑÑ Ð¿Ñ€Ð¾Ð²Ð¾Ð´Ð¸Ñ‚ÑŒ 
Ð´Ð²Ð¾Ð¹Ð½Ð¾Ðµ ÐºÐ¾Ð´Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ðµ Ð¸ Ð´ÐµÐºÐ¾Ð´Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ðµ Ð´Ð»Ñ Ð¿ÐµÑ€ÐµÐ´Ð°Ñ‡Ð¸ Ð´Ð°Ð½Ð½Ñ‹Ñ…. 
*/
btoa_=c=>c
.split('')
.map(a=>[a,a.codePointAt()])
.reduce((a,b)=>(a[0]+=(b[1]>255||b[1]<16)?b[0]:'!'+b[1].toString(16),a),[''])
.reduce((a,b)=>(a+=encodeURI(b).replace(/[!%]/g,''),a),'')
.match(/.{2}/g)
.map(a=>parseInt(a,16).toString(2))
.reduce((a,b)=>(a[0]+='0'.repeat(8-b.length)+b,a),[''])
.reduce((a,b)=>b+'0'.repeat(6-b.length%6),'')
.match(/.{6}/g).map(a=>parseInt(a,2))
.reduce((a,b)=>(a[0]+='ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+/'[b],a),[''])
.reduce((a,b)=>b+'='.repeat(4-b.length%4),'');
//-----------------------------------------------------------------------------------------------------------
atob_=c=>c
.match(/[\w\d\+\/]/ig)
.map(a=>'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+/'.indexOf(a).toString(2))
.reduce((a,b)=>(a+=('000000'+b).slice(-6),a),'')
.match(/.{8}/g)
.map(a=>parseInt(a,2).toString(16))
.reduce((a,b)=>(a[0]+='%'+('00'+b).slice(-2),a),[''])
.reduce((a,b)=>decodeURIComponent(b),'');
